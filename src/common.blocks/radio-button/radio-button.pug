mixin radioButton(label, options={})
    -
        if (options.transition) {
            var transition = 'radio-button_transition radio-button_transition_' + options.transition;

            attributes.class = Array.isArray(attributes.class) 
                ? attributes.class.concat(transition.split(' '))
                : (typeof attributes.class === 'string' ? attributes.class + ' ' : '') + transition;
        }
        
    label.radio-button&attributes(attributes)
        input.radio-button__input(type="radio")&attributes(options.inputAttributes || {})
        span.radio-button__checkmark
        span.radio-button__label= label