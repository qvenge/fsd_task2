mixin guestList(values={})
    -
        var list = { 
            adults: { label: 'взрослые', value: 0 },
            children: { label: 'дети', value: 0 },
            babies: { label: 'младенцы', value: 0 }
        };

        Object.keys(list).forEach(function(key) {
            if (values.hasOwnProperty(key)) {
                list[key].value = values[key];
            }
        });

    .guest-list&attributes(attributes)
        .guest-list__label.title.title_h3 Гости
        +dropdownOutput('Сколько гостей')
            .guest-list__content
                +quantitativeList(list)
                .guest-list__btn-container
                    .guest-list__reset-btn
                        +button('Очистить', { type: 'third', additional: true })
                    .guest-list__apply-btn
                        +button('Применить', { type: 'third' })